<% if flash[:notice] %>
  <p id = "notice">
    <%= flash[:notice]%>
  </p>
<% end %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
  <!--一覧画面に詳細画面へのリンクを設定する-->
  <tr>
  <span><th><%= book.title %></th></span>
  <span><th><%= book.body %></th></span>
  <th><%= link_to "Show", book_path(book.id) %></th>
  <th><%= link_to "Edit",edit_book_path(book.id) %></th>
  <th><%= link_to "delete", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></th>
  </tr>
<% end %>
</thead>
</table>

<%= form_for(@book) do |f| %>
<h2>New book</h2>
<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= message %>
 </div>
<% end %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_field :body %>
 <%= f.submit %>
<% end %>
